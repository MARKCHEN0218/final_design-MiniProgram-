.top{
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
}
.middle{
    width: 100%;
    height: 650rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.main_body{
    width: 90%;
    height: 90%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    background-color: #0988ef;
    border-radius: 10rpx;
}
.split{
    width: 95%;
    height: 3%;
    border-radius: 10rpx;
    background-color: white;
}
.search_placeholder{
    font-size: 36rpx;
    color: white;
}
.search_id{
    width: 100%;
    height: 20%;
    display: flex;
    align-items: center;
}
.search_input{
    margin-left: 5%;
    width: 65%;
    font-size: 36rpx;
    color: white;
}
.search_model_title{
    margin-left: 11%;
    font-size: 42rpx;
    color: white;
}
.section{
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.section__title{
    width: 40%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 42rpx;
    color: white;
}
.picker{
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 42rpx;
    color: white;
}
.search_button_section{
    margin-top: 40rpx;
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search_button{
    width: 65%;
    height: 70%;
    border-radius: 10rpx;
    background-color: #0988ef;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
    color: white;
}