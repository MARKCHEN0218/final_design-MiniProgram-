.activity_model{
    margin-top: 40rpx;
    width: 100%;
    height: 450rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.activity_model_mainbody{
    width: 90%;
    height: 90%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    box-shadow: 0px 0px 20rpx black;
    border-radius: 10rpx;
}
.activity_name{
    width: 100%;
    height: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
}
.activity_allinfo{
    width: 98%;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.activity_maininfo{
    font-size: 35rpx;
}
.activity_button_section{
    width: 100%;
    height: 25%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.activity_button_confirm{
    width: 30%;
    height: 68%;
    background-color: green;
    border-radius: 10rpx;
    color: white;
    font-size: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.activity_button_cancel{
    width: 30%;
    height: 68%;
    background-color: rgb(185, 185, 185);
    border-radius: 10rpx;
    color: white;
    font-size: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
