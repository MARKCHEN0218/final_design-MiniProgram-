.main_top{
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.main_top_left{
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.userinfo-avatar{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.userinfo-avatar-boy{
    width: 128rpx;
    height: 128rpx;
    border: 8rpx solid #0988ef;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}
.userinfo-avatar-girl{
    width: 128rpx;
    height: 128rpx;
    border: 8rpx solid rgb(255, 148, 237);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}
.main_top_userinfo{
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.main_top_userinfo_username{
    width: 100%;
    height: 55%;
    font-size: 42rpx;
    display: flex;
    align-items: center;
}
.main_top_userinfo_position{
    width: 100%;
    height: 35%;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    color: gray;
}
.main_top_right{
    height: 100%;
    width: 30%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-around;
}
.last_update_time_yearmonth{
    width: 100%;
    height: 30%;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: gray;
}
.last_update_time_time{
    width: 80%;
    height: 30%;
    display: flex;
   justify-content: center;
    color: gray;
    font-size: 36rpx;
}
.split{
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.split_line{
    width: 95%;
    height: 20%;
    border-radius: 10rpx;
    background-color: gray;
}
.search_result{
    width: 100%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.search_result_top{
    width: 100%;
    height: 16%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
.search_result_title{
    width: 92%;
    height: 70%;
    font-size: 42rpx;
    display: flex;
    align-items: center;
}
.icon_collection{
    width: 100%;
    height: 80%;
    display: flex;
    justify-content: space-around;
}
.icon_pattern{
    width: 28%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon_main_body{
    width: 100%;
    height: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.icon_size{
    width: 140rpx;
    height: 140rpx;
}
.icon_title{
    font-size: 48rpx;
    color: #86d0e4;
}
.icon_text{
    font-size: 42rpx;
}
.swith_to_attendance_button{
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.attendance_button{
    width: 60%;
    height: 70%;
    border-radius: 10rpx;
    background-color: #0988ef;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
    box-shadow: 0px 0px 20rpx #32a0fa;
}