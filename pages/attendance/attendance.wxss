.main_top{
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.main_top_left{
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.userinfo-avatar{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.userinfo-avatar-boy{
    width: 128rpx;
    height: 128rpx;
    border: 8rpx solid #0988ef;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}
.userinfo-avatar-girl{
    width: 128rpx;
    height: 128rpx;
    border: 8rpx solid rgb(255, 148, 237);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}
.main_top_userinfo{
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.main_top_userinfo_username{
    width: 100%;
    height: 55%;
    font-size: 42rpx;
    display: flex;
    align-items: center;
}
.main_top_userinfo_position{
    width: 100%;
    height: 35%;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    color: gray;
}
.main_top_right{
    height: 100%;
    width: 30%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-around;
}
.last_update_time_yearmonth{
    width: 100%;
    height: 30%;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: gray;
}
.last_update_time_time{
    width: 80%;
    height: 30%;
    display: flex;
   justify-content: center;
    color: gray;
    font-size: 36rpx;
}
.split_line{
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.split_line_1{
    width: 95%;
    height: 20%;
    background-color: gray;
    border-radius: 5rpx;
    box-shadow: 0px 0px 10rpx whitesmoke;
}
