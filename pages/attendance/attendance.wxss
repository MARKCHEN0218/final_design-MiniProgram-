.main-tap{
    width: 100%;
}
.attendence_main_page{
    width: 100%;
    height: 700rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.attendence_main_page_title{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.attendence_pic{
    width: 72rpx;
    height: 72rpx;
}
.attendence_text{
    font-size: 40rpx;
    color: gray;
}
.attendece_filled{
    width: 64%;
    height: 100%;
}
.attendence_main_button_section{
    width: 100%;
    height: 350rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.attendence_main_button{
    width: 300rpx;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
