.title{
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
}
.split{
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.split_line{
    width: 95%;
    height: 42%;
    border-radius: 10rpx;
    background-color: gray;
}
.split_line_one{
    width: 95%;
    height: 20%;
    border-radius: 10rpx;
    background-color: gray;
}
.section{
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.section__title{
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 42rpx;
}
.picker{
    width: 60%;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 42rpx;
}
.inputer{
    width: 60%;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 42rpx;
}
.section_button{
    width: 60%;
    height: 100%;
    display: flex;
    align-items: center;
}
.select_person_button{
    width: 85%;
    height: 75%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    background-color: #0988ef;
    font-size: 34rpx;
    border-radius: 10rpx;
}
.post_button_section{
    margin-top: 50rpx;
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.post_button{
    width: 80%;
    height: 50%;
    background-color: green;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    font-size: 48rpx;
}