@import "../../dist/weui.wxss";
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.main-tap{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.activity_model{
    margin-top: 40rpx;
    width: 100%;
    height: 450rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.activity_model_mainbody{
    width: 90%;
    height: 90%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    box-shadow: 0px 0px 20rpx black;
    border-radius: 10rpx;
}
.activity_name{
    width: 100%;
    height: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
}
.activity_allinfo{
    margin-top: 3%;
    width: 98%;
    height: 68%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.activity_maininfo{
    width: 100%;
    height: 33%;
    display: flex;
    align-items: baseline;
    justify-content: center;
}
.activity_info_title{
    width: 35%;
    font-size: 38rpx;
    display: flex;
    justify-content: flex-end;
}
.activity_info{
    width: 65%;
    font-size: 35rpx;
    display: flex;
    justify-content: flex-start;
}