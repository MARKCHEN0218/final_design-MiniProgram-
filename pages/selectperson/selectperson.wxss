.friend_model{
    width: 100%;
    height: 260rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}
.friend_model_mainbody{
    width: 90%;
    height: 80%;
    padding-bottom: 15rpx;
    border-radius: 10rpx;
    display: flex;
    border: 1px solid gray;
    box-shadow: 0px 0px 8rpx black;
    box-sizing: border-box;
}
.mainbody_profile{
    height: 100%;
    width: 28%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.userinfo-avatar-boy{
    height: 140rpx;
    width: 140rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 8rpx solid #0988ef;
    box-sizing: border-box;
}
.userinfo-avatar-girl{
    height: 140rpx;
    width: 140rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    border: 8rpx solid rgb(255, 148, 237);
    box-sizing: border-box;
}
.photo_style{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.main_body_remain{
    display: flex;
    height: 100%;
    width: 72%;
    display: flex;
    flex-direction: column;
}
.mainbody_filled{
    width: 100%;
    height: 15%;
}
.mainbody_info{
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.mainbody_info_username{
    font-size: 36rpx;
    color: gray;
}
.mainbody_info_position{
    font-size: 28rpx;
    color: gray;
}
.mainbody_selected{
    width: 100%;
    height: 35%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.button_section{
    width: 48%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.selected_image{
    border-radius: 50%;
    border: 1px solid #6bc839;
    box-sizing: border-box;
    width: 65rpx;
    height: 65rpx;
}
.selected_text{
    font-size: 36rpx;
    color: gray;
}
.selected_image_fashion{
    width: 100%;
    height: 100%;
}
.confirm_section{
    width: 100%;
    height: 150rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    z-index: 1;
    justify-content: center;
    align-items: center;
    background-color: whitesmoke;
}
.confirm_button{
    width: 65%;
    height: 70%;
    display: flex;
    font-size: 48rpx;
    border-radius: 10rpx;
    justify-content: center;
    align-items: center;
    background-color: #0988ef;
    color: white;
}